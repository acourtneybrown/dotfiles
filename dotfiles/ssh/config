NoHostAuthenticationForLocalhost yes
CanonicalizeHostname yes
CanonicalDomains notcharlie.com

{%@@ if ssh_agent @@%}
Host *
  IdentityAgent "{{@@ ssh_agent @@}}"
{%@@ endif @@%}

# Personal
Host *.notcharlie.com
  ForwardAgent yes
  User abrown
Host exhubber adams-mbp
  User adambrown
Host pfsense
  ForwardAgent no
  User admin
Host retropie*
  User pi
Host picluster-*
  User pi
Host synology
  Port 2222
  User abrown
Host synology-root
  Hostname synology.notcharlie.com
  Port 2222
  User root
Host gitea
  Hostname synology.notcharlie.com
  Port 2234
  User git
Host unifi-*
  ForwardAgent no
  User unifi-admin

{%@@ if confluent @@%}
# Confluent
Host *.compute.amazonaws.com
  User ubuntu
  UserKnownHostsFile /dev/null

Host jenkins*.confluent.io
  User ubuntu
  UserKnownHostsFile /dev/null

Host *
  PubkeyAcceptedKeyTypes=+ssh-rsa
  HostKeyAlgorithms=+ssh-rsa
