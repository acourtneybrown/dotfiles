#!/usr/bin/env bash

set -e
cd "$(dirname "${0}")/.."

# shellcheck disable=SC1091
. script/functions

ensure_brewfile_installed Brewfile.home

enable_pyenv
enable_goenv

pipx_install 3.11 python-kasa python-vipaccess

pyenv global "$(ensure_pyenv_version 3.11)"
goenv global "$(ensure_goenv_version 1.19)"
